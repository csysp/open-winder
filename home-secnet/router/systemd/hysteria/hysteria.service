[Unit]
Description=Hysteria2 UDP-over-QUIC Wrapper
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/opt/hysteria/hysteria server -c /etc/hysteria/config.yaml
Restart=on-failure
RestartSec=5
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target

